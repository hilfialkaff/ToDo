<%= form_for([@user, @user.groups.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :members %><br />
    <%= f.text_area :members %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
