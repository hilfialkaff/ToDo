<?xml version="1.0" encoding="utf-8"?>
<TabHost
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/th_invitation_confirmation"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<LinearLayout
	android:id="@+id/ll_invitation_confirmation"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
<TabWidget
	android:id="@android:id/tabs"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
</TabWidget>
<FrameLayout
	android:id="@android:id/tabcontent"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<ScrollView
	android:id="@+id/sv_invitation_confirmation"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:scrollbars="vertical">
<TableLayout
	android:id="@+id/tl_invitation_confirmation"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:stretchColumns="0">
	<TableRow
		android:id="@+id/tr_sender_confirmation"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tv_sender_confirmation1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Sender"
			android:textSize="20px">
		</TextView>
		<TextView
			android:id="@+id/tv_sender_confirmation2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20px">
		</TextView>
	</TableRow>
	<TableRow
		android:id="@+id/tr_group_confirmation"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tv_group_confirmation1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Group"
			android:textSize="20px">
		</TextView>
		<TextView
			android:id="@+id/tv_group_confirmation2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20px">
		</TextView>
	</TableRow>
	<TableRow
		android:id="@+id/tr_desc_confirmation"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tv_desc_confirmation1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Description"
			android:textSize="20px">
		</TextView>
		<TextView
			android:id="@+id/tv_desc_confirmation2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20px">
		</TextView>
	</TableRow>
</TableLayout>
</ScrollView>
</FrameLayout>
</LinearLayout>
</TabHost>