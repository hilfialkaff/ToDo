<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:background="#FFFFFF">
    <TextView
    	android:id="@+id/tv_start"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:text="Please Enter Your Contact Information"
		android:layout_marginLeft="10px"
		android:paddingBottom="25px">
	</TextView>
	<EditText
		android:id="@+id/et_start_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_start"
		android:hint="Name"
		android:layout_marginLeft="10px"
		android:layout_marginRight="150px">
	</EditText>
	<EditText
		android:id="@+id/et_start_number"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/et_start_name"
		android:hint="Number"
		android:layout_marginLeft="10px"
		android:layout_marginRight="150px">
	</EditText>
	<EditText
		android:id="@+id/et_start_email"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/et_start_number"
		android:hint="Email"
		android:layout_marginLeft="10px"
		android:layout_marginRight="150px">
	</EditText>
	<EditText
		android:id="@+id/et_start_password"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/et_start_email"
		android:hint="Password"
		android:layout_marginLeft="10px"
		android:layout_marginRight="150px"
		android:password="true">
	</EditText>
	<Button
		android:id="@+id/b_start_sign_up"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/et_start_password"
		android:text="Sign Up">
	</Button>
</RelativeLayout>
